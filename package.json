  "repository": "hasanirogers/kemet-pwa",
  "scripts": {
    "start": "polymer serve",
    "build": "npm run build:prpl-server && npm run build:static",
    "build:prpl-server": "polymer build --auto-base-path && gulp prpl-server",
    "build:static": "polymer build",
    "serve:prpl-server": "prpl-server --root server/build",
    "serve:static": "polymer serve --port 5000 build/es5-bundled",
    "dev": "polymer build && node server/bin/www",
    "prod": "polymer build && forever start server/bin/www"
  },
  "dependencies": {
    "@polymer/app-layout": "^3.0.0",
    "@polymer/lit-element": "^0.6.2",
    "@polymer/polymer": "^3.0.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.3.3",
    "dotenv": "^5.0.1",
    "ejs": "^2.3.1",
    "express": "^4.13.3",
    "highlightjs": "^9.12.0",
    "kemet-scss": "^1.2.1",
    "morgan": "^1.6.1",
    "pwa-helpers": "^0.8.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "syntax-highlight": "^1.0.0"
  },
  "devDependencies": {
    "axe-core": "^3.0.0",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-nodemon": "^2.2.1",
    "gulp-rename": "^1.3.0",
    "gulp-replace": "^1.0.0",
    "mocha": "^5.2.0",
    "pixelmatch": "^4.0.2",
    "polymer-cli": "^1.7.6",
    "polyserve": "^0.27.0",
    "prpl-server": "^1.2.0",
    "puppeteer": "^1.5.0",
    "wct-browser-legacy": "^1.0.1"
  }
}
